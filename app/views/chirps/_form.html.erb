<%= simple_form_for(@chirps) do |f|%>
<%= f.error.notification%>
<div class="fiel">
  <div class="control">
    <%= f.input :chirp, label: "Chirp about it", input_html: {class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new chirp..." %>
  </div>
</div>

<%= f.button :submit, class: "button is-info" %>
<% end %>