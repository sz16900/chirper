<div class="column is-half">
  <% if user_signed_in? %>
	<article class="media box">
		<figure class="media-left">
			<p class="image is-64x64">
				<%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
			</p>
		</figure>
		<div class="media-content">
			 <%= render 'chirps/form' %>
		</div>
	</article>
  <% end %>


<% @chirps.each do | chirp | %>
  <div class="box">
  	<article class="media">
  		<div class="media-left">
  			<figure class="image is-64x64">
  				<%= gravatar_image_tag(chirp.user.email, size: 64, alt: chirp.user.name) %>
  			</figure>
  		</div>
  		<div class="media-content">
  			<div class="content">
  				<strong><%= chirp.user.name %></strong><br />
  				<small><%= chirp.user.username %></small><br/>
  				<p><%= chirp.chirp %></p>
  			</div>
        <% if user_signed_in? && current_user.id == chirp.user_id %>
  			<nav class="level">
  				<div class="level-left is-mobile">
  					<%= link_to chirp, class: "level-item" do %>
  					  <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
  					<% end %>
  					<%= link_to edit_chirp_path(chirp), class: "level-item" do %>
  					  <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
  					<% end %>
  					<%= link_to chirp, method: :delete, data: { confirm: "Are you sure you want to delete this chirp?" } do %>
  							<span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
  					<% end %>
  				</div>
  			</nav>
        <% end %>
  		</div>
  	</article>
  </div>
<% end %>
</div>